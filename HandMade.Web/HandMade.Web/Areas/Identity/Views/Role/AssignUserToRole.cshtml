@model AssignUserToRoleViewModel

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg" style="border-radius: 10px; background-color: #f8f9fa;">
            <div class="card-header text-center" style="background-color: #1d6999; color: white; border-radius: 10px 10px 0 0;">
                <h4>Assign User to Role</h4>
            </div>
            <div class="card-body">
                <form asp-action="AssignUserToRole">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label fw-bold">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter user name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="control-label fw-bold">Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="control-label fw-bold">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Re-enter password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label fw-bold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold" asp-for="UserType"></label>
                        <span class="form-check">
                            <input class="form-check-input" type="radio" value="Customer" asp-for="UserType" id="customerRadiobutton" />
                            <label class="form-check-label" asp-for="UserType">Customer</label>
                        </span>
                        <span class="form-check">
                            <input class="form-check-input" type="radio" value="Editor" asp-for="UserType" id="editorRadiobutton" />
                            <label class="form-check-label" asp-for="UserType">Editor</label>
                        </span>
                        <span class="form-check">
                            <input class="form-check-input" type="radio" value="Admin" asp-for="UserType" id="adminRadiobutton" />
                            <label class="form-check-label" asp-for="UserType">Admin</label>
                        </span>
                        <span class="text-danger" asp-validation-for="UserType"></span>
                    </div>


                    <div class="d-grid">
                        <input type="submit" value="Create" class="btn btn-primary" style="background-color: #1d6999; border: none;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
