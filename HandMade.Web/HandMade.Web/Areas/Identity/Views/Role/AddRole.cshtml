@model AddRoleViewModel

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg" style="width: 28rem; background-color: #f8f9fa; border-radius: 10px;">
        <div class="card-header text-center" style="background-color: #95b7ed; color: #ffffff; border-radius: 10px 10px 0 0;">
            <h4>Add Role</h4>
        </div>
        <div class="card-body">
            <form asp-action="AddRole">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <input type="submit" value="AddRole" class="btn btn-primary" style="background-color: #09264f; border: none;" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}