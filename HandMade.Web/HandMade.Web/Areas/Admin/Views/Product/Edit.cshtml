@model ProductCategoryListViewModel


<div class="container mt-5">
    <div class="row">
        <!-- Edit Form -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-light text-dark">
                    <h5 class="mb-0">Edit Product</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditInAction" enctype="multipart/form-data">
                        <input type="hidden" asp-for="product.ID">
                        <input type="hidden" asp-for="product.ImgUrl">
                        <div class="mb-3">
                            <label asp-for="product.Name" class="form-label"></label>
                            <input type="text" asp-for="product.Name" class="form-control">
                            <span asp-validation-for="product.Name" class="text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="product.Description" class="form-label"></label>
                            <input type="text" asp-for="product.Description" class="form-control">
                            <span asp-validation-for="product.Description" class="text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="product.Price" class="form-label"></label>
                            <input type="text" asp-for="product.Price" class="form-control">
                            <span asp-validation-for="product.Price" class="text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="product.Quantity" class="form-label"></label>
                            <input type="text" asp-for="product.Quantity" class="form-control">
                            <span asp-validation-for="product.Quantity" class="text text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="product.ImgUrl" class="form-label"></label>
                            <input id="img" name="img" type="file" asp-for="product.ImgUrl" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="product.Category_Id" class="form-label"></label>
                            <select asp-for="product.Category_Id" class="form-select">
                                <option disabled selected>-- Select Option --</option>
                                @foreach (var category in Model.categories)
                                {
                                    <option value="@category.ID" > @category.Name </option>
                                }
                            </select>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-success" asp-action="EditInAction" asp-controller="Product" asp-route-id="product.ID">Update</button>
                            <a class="btn btn-secondary" asp-action="Index" asp-controller="Product">Back To List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex align-items-center justify-content-center">
            <div class="container">
                <img src="~/@Model.product.ImgUrl" class="img-fluid border rounded" alt="Product Image" width="700px" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

