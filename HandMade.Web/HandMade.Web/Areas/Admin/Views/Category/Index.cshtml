@model IEnumerable<Category>

<div class="d-flex justify-content-start mb-3">
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create New Category</a>
</div>
<table class="table table-striped table-hover table-bordered">
    <thead class="bg-primary text-white">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created Time</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.CreatedTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-outline-primary me-2" asp-action="Edit" asp-controller="Category" asp-route-id="@category.ID">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@category.ID">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

